<?xml version='1.0' encoding='utf-8'?>
<widget id="com.performanceactive.dm" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DM</name>
    <description>
        Like DOOM but really simple.
    </description>
    <author email="support@performanceactive.com" href="http://www.performanceactive.com/">
        performanceActive
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarBackgroundColor" value="#5f5f5f" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
